<windows>
<!-- Adding paging to crafting skill unlocks window -->
<append xpath="/windows/window[@name='windowSkillCraftingInfo']//rect[@name='tableBox']">
    <panel pos="370,0" height="43" disableautobackground="true">
        <pager name="pager" pos="4,-6" />
    </panel>
</append>

<!-- Add search box to crafting skills window -->
    <setattribute xpath="/windows/window[@name='windowSkillList']/panel[@name='content']/rect[@name='categoryHeader']/panel/grid" name="cols">15</setattribute>
    <set xpath="/windows/window[@name='windowSkillList']/panel[@name='content']/rect[@name='categoryHeader']/panel[@pos='394,0']">
        <rect pos="92,-8">
            <sprite depth="1" pos="-83,1" name="searchIcon" style="icon30px" sprite="ui_game_symbol_search"/>
            <textfield depth="2" pos="-48,1" name="searchInput" width="110"  height="30"  search_field="true" close_group_on_tab="true"/>
        </rect>
    </set>
                <conditional>
                    <if cond="mod_loaded('zSMXui')">
                        <append xpath="/windows/window[@name='windowSkillList']/rect[@name='leftPanel']/rect[@name='content']/rect/rect/scrollview/table[@name='skillList']">

                            <rect name="Perk Mastery">
                                <smx_skills_attribute_entry name="Perk Mastery" pos="0,2" size="90,90" rotation="0" />
                                <smx_skills_skill_grid pos="130,91" perkCount="5" groupName="Jack of All Trades" />
                                <smx_skills_skill_grid pos="640,91" perkCount="5" groupName="" />
                                <smx_skills_skill_grid pos="130,-78" perkCount="3" groupName="" />
                                
                                <smx_skills_skill_grid pos="130,-247" perkCount="5" groupName="Master of One" />
                                <smx_skills_skill_grid pos="640,-247" perkCount="5" groupName="" />
                                <smx_skills_skill_grid pos="130,-416" perkCount="5" groupName="" />
                                <smx_skills_skill_grid pos="640,-416" perkCount="5" groupName="" />
                                <smx_skills_skill_grid pos="130,-585" perkCount="1" groupName="" />
                            </rect>

                        </append>
                    </if>
                </conditional>
</windows>